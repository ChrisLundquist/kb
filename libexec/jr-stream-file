#!/usr/bin/env bash
# Usage: jr stream-file <path> <md5> <perms>
set -e
[ -n "$JR_DEBUG" ] && set -x

file="$1"
md5="$2"
perms="$3"

mkdir -p "$(dirname $file)"

(cat - | jr-decode64 | tee "$file") >/dev/null

if [ "$md5" != "$(jr-md5 $file)" ] ; then
  echo "Streamed file $file does not match source file md5 ${md5}" >&2
  exit 1
fi

chmod "$perms" "$file"
